<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/relative_title"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <Button
            android:id="@+id/button_import_back"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:background="@drawable/fillet_style_return_selector"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="批量导入"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/black" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative_title"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/text_content_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="操作步骤如下："
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_content_title"
            android:layout_marginTop="10dp"
            android:text="@string/import_tip"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative_title"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_progress_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="导入中......"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/text_progress_title"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/text_import_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progress_bar"
            android:layout_marginTop="20dp"
            android:text="已处理：0"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text_import_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_import_finish"
            android:text="导入成功：0"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text_import_failure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_import_success"
            android:text="导入失败：0"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text_import_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_import_failure"
            android:text="总数：0"
            android:textColor="@color/black"
            android:textSize="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative_title"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_finish_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="导入完毕"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/image_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_finish_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@mipmap/ic_success" />

        <TextView
            android:id="@+id/text_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_finish"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="已处理：0"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/text_finish_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_finish"
            android:layout_centerHorizontal="true"
            android:text="导入成功：0"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/text_finish_failure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_finish_success"
            android:layout_centerHorizontal="true"
            android:text="导入失败：0"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/text_finish_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_finish_failure"
            android:layout_centerHorizontal="true"
            android:text="总数：0"
            android:textColor="@color/black"
            android:textSize="20sp"/>

    </RelativeLayout>
    <Button
        android:id="@+id/button_addface"
        android:layout_above="@+id/button_import"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/fillet_style_button_selector"
        android:text="入库"
        android:textColor="#fff"
        android:textSize="16sp"
        />
    <Button
        android:id="@+id/button_register"
        android:layout_above="@+id/button_import"
        android:layout_toRightOf="@+id/button_addface"
        android:layout_marginBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fillet_style_button_selector"
        android:text="注册用户"
        android:textColor="#fff"
        android:textSize="16sp"
        />
    <Button
        android:id="@+id/button_get"
        android:layout_above="@+id/button_import"
        android:layout_toRightOf="@+id/button_register"
        android:layout_marginBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fillet_style_button_selector"
        android:text="查询"
        android:textColor="#fff"
        android:textSize="16sp"
        />
    <Button
        android:id="@+id/button_delete"
        android:layout_above="@+id/button_import"
        android:layout_toRightOf="@+id/button_get"
        android:layout_marginBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fillet_style_button_selector"
        android:text="删库"
        android:textColor="#fff"
        android:textSize="16sp"
        />

    <Button
    android:id="@+id/button_rename"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/button_import"
    android:layout_marginLeft="5dp"
    android:layout_marginBottom="5dp"
    android:layout_toRightOf="@+id/button_delete"
    android:background="@drawable/fillet_style_button_selector"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:text="重命名"
    android:textColor="#fff"
    android:textSize="16sp" />
    <Button
    android:id="@+id/button_delete_file"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/button_import"
    android:layout_marginLeft="5dp"
    android:layout_marginBottom="5dp"
    android:layout_toRightOf="@+id/button_rename"
    android:background="@drawable/fillet_style_button_selector"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:text="删文件"
    android:textColor="#fff"
    android:textSize="16sp" />
    <Button
        android:id="@+id/button_delete_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_import"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/button_delete_file"
        android:background="@drawable/fillet_style_button_selector"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="删成功"
        android:textColor="#fff"
        android:textSize="16sp" />
    <Button
        android:id="@+id/button_delete_failed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_import"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/button_delete_success"
        android:background="@drawable/fillet_style_button_selector"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="删失败"
        android:textColor="#fff"
        android:textSize="16sp" />
    <Button
        android:id="@+id/button_import"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/fillet_style_button_selector"
        android:text="搜索SD卡，并导入数据"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#fff"
        android:textSize="16sp" />




    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp"
        android:src="@mipmap/ic_baidu_logo"
        android:id="@+id/imageView2" />
</RelativeLayout>